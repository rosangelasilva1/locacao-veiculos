<%= form_for(@reserva, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @reserva.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reserva.errors.count, "error") %> prohibited this reserva from being saved:</h4>

      <ul>
      <% @reserva.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :veiculo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :veiculo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cliente, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cliente, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tempo_de_espera, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :tempo_de_espera, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor_alugado, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor_alugado, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reservado_de, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :reservado_de, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reservado_ate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :reservado_ate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pagamento_no_destino, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :pagamento_no_destino, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
